{
  "name": "astro-blog",
  "private": true,
  "scripts": {
    "dev": "DRAFTS=true astro dev",
    "start": "astro build && astro preview",
    "build": "astro build",
    "preview": "astro preview",
    "lint:a11y": "start-test 'yarn start --silent' 3000 'yarn lint:a11y:local'",
    "lint:a11y:local": "pa11y-ci --sitemap 'http://localhost:3000/sitemap.xml' --sitemap-find 'https://animafps.xyz' --sitemap-replace 'http://localhost:3000'",
    "lint:a11y:remote": "pa11y-ci --sitemap 'https://animafps.xyz/sitemap.xml'",
    "lint:linkcheck": "start-test 'yarn start --silent' 3000  'yarn lint:linkcheck:local'",
    "lint:linkcheck:local": "blc -roe --user-agent 'broken-link-checker/0.7.8' 'http://localhost:3000/'",
    "lint:linkcheck:remote": "blc -ro --user-agent 'broken-link-checker/0.7.8' 'https://animafps.xyz/'"
  },
  "dependencies": {
    "@astrojs/renderer-svelte": "^0.2.1",
    "@stefanprobst/remark-shiki": "^2.0.2",
    "astro": "^0.21.5",
    "autoprefixer": "^10.4.0",
    "katex": "^0.15.1",
    "reading-time": "^1.5.0",
    "rehype-katex": "^6.0.2",
    "remark-math": "^5.1.1",
    "remark-twemoji": "^0.1.1",
    "sass": "^1.45.0",
    "shiki": "^0.9.15",
    "tailwindcss": "^3.0.7",
    "twemoji": "^13.1.0",
    "unplugin-auto-import": "^0.5.5"
  },
  "packageManager": "yarn@3.1.1",
  "devDependencies": {
    "broken-link-checker": "^0.7.8",
    "pa11y-ci": "^3.0.1",
    "prettier": "^2.5.1",
    "prettier-plugin-astro": "^0.0.11",
    "prettier-plugin-svelte": "^2.5.1",
    "start-server-and-test": "^1.14.0"
  }
}
