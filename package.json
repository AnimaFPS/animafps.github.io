{
  "name": "astro-blog",
  "private": true,
  "scripts": {
    "dev": "DRAFTS=true astro dev",
    "start": "astro build && astro preview",
    "build": "astro build",
    "preview": "astro preview",
    "lint:a11y": "start-test 'yarn start --silent' 3000 'yarn lint:a11y:local'",
    "lint:a11y:local": "pa11y-ci --sitemap 'http://localhost:3000/sitemap.xml' --sitemap-find 'https://animafps.xyz' --sitemap-replace 'http://localhost:3000'",
    "lint:a11y:remote": "pa11y-ci --sitemap 'https://animafps.xyz/sitemap.xml'",
    "lint:linkcheck": "start-test 'yarn start --silent' 3000  'yarn lint:linkcheck:local'",
    "lint:linkcheck:local": "blc -ro 'http://localhost:3000/'",
    "lint:linkcheck:remote": "blc -ro 'https://animafps.xyz/'"
  },
  "packageManager": "yarn@3.1.1",
  "devDependencies": {
    "@astrojs/renderer-svelte": "^0.3.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "^17.0.10",
    "astro": "^0.22.17",
    "autoprefixer": "^10.4.2",
    "broken-link-checker": "^0.7.8",
    "pa11y-ci": "^3.0.1",
    "prettier": "^2.5.1",
    "prettier-plugin-astro": "^0.0.12",
    "prettier-plugin-svelte": "^2.6.0",
    "reading-time": "^1.5.0",
    "sass": "^1.49.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.5.5",
    "vite": "^2.7.13"
  }
}
