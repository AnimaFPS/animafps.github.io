---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description: string;
  permalink: string;
  current?: string;
  ogType?: string;
}
const { title, description, permalink, current, ogType } = Astro.props;
---

<html lang="en" itemscope itemtype="https://schema.org/Blog">
  <head>
    <BaseHead {title} {description} {permalink} {ogType} />
  </head>
  <body>
    <div class="layout">
      <Header {current} />

      <div class="px-10 container">
        <slot />
      </div>

      <Footer />
    </div>
  </body>
</html>

<style>
  .layout {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    min-height: 100vh;
    position: relative;
  }

  main {
    flex: 1;
    position: relative;
    margin: 0 auto;
    max-width: 1400px;
    padding: 1em 2em;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
