---
import ThemeToggleButton from "./ThemeToggleButton.svelte";
const { current = "" } = Astro.props;
---

<nav>
  <a class={current === "posts" ? "selected" : ""} href="/posts/">posts</a>
  <a class={current === "about" ? "selected" : ""} href="/about/">about</a>
  <ThemeToggleButton client:idle />
</nav>

<style lang="scss">
  nav {
    align-items: center;
    display: flex;
    flex: 1;
    font-weight: 700;
    justify-content: flex-end;
    text-transform: uppercase;
  }

  a {
    color: inherit;
    text-decoration: none;
    padding: 10px 5px;
    position: relative;
    margin-left: 20px;

    &:hover {
      color: inherit;
    }

    &:not(.selected) {
      opacity: 0.7;
    }

    &::before {
      content: "";
      position: absolute;
      transition: transform 0.3s ease;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 2px;
      background: var(--text-secondary);
      transform: scaleX(0);
    }

    &:hover::before,
    .selected::before {
      transform: scaleX(1);
    }
  }

  .selected::before {
    background: var(--primary-color);
  }
</style>
