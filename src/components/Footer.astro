---
import { socials } from "../config.json";
---

<footer class="mt-auto mx-auto">
  {socials.map((val) => {
    return (
      <a href={val.href} target="_blank" rel="nofollow noopener noreferrer">
        {val.name}
      </a>
    );
  })}
  <br />
  <small>
    <span
      xmlns:cc="http://creativecommons.org/ns#"
      xmlns:dct="http://purl.org/dc/terms/"
      ><span property="dct:title">Anima's Stuff</span> &copy; {new Date().getFullYear()}
      is licensed under <a
        href="http://creativecommons.org/licenses/by-sa/4.0/"
        target="_blank"
        rel="license noopener noreferrer nofollow"
        style="display:inline-block;">CC BY-SA 4.0</a
      > unless stated otherwise.</span
    ><br />
    Powered by <a
      href="https://astro.build"
      target="_blank"
      rel="nofollow noopener noreferrer">Astro</a
    >.</small
  >
</footer>

<style lang="scss">
  footer {
    color: var(--text-secondary);
    font-size: 1em;
    max-width: 1400px;
    padding: 1em 2em;
    text-align: center;
    width: 100%;
    a:not(small *) {
      text-decoration: none;
      margin: 1em 0.2em;
    }
  }
</style>
